[Unit]
Description=The Apache HTTP Server
After=network.target

[Service]
ExecStart=/bin/bash -ac '. /etc/apache2/envvars; exec /usr/local/apache2/bin/apachectl -k start'
ExecReload=/bin/bash -ac '. /etc/apache2/envvars; exec /usr/local/apache2/bin/apachectl -k graceful'
ExecStop=/bin/bash -ac '. /etc/apache2/envvars; exec /usr/local/apache2/bin/apachectl -k graceful-stop'
PIDFile=/usr/local/apache2/logs/httpd.pid
PrivateTmp=true

[Install]
WantedBy=multi-user.target
